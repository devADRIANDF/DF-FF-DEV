<section class="shop-single-section product-details section-padding pt-0">
  <div class="container-fluid">
    <div class="row">
      <div class="col col-lg-8 col-md-12 col-12 product-single-image">
        <div class="gh">
          <div class="row gx-2 mobail-active owl-carousel">
            {% for media in product.media %}
              {% if media.media_type == "image" %}
                <div class="col col-lg-6 col-md-12 col-12">
                  <div class="p-img">
                    <img
                      src="{{ media.src | image_url: width: 1920  }}"
                      alt="{{ product.title }}"
                      class="img img-responsive"
                      width=""
                      height="">
                  </div>
                </div>
              {% endif %}
              {% if media.media_type == "video" %}
                <div class="col col-lg-12 col-md-12 col-12">
                  <div class="product-video" href="{{ 'details2.png' | asset_url }}">
                    <video
                      src="{{ media.sources[1].url }}"
                      autoplay
                      loop=""
                      muted=""
                      playsinline=""></video>
                  </div>
                </div>
              {% endif %}
            {% endfor %}


          </div>
        </div>
      </div>
      <div class="col col-lg-4 col-12 product-right">

        <div class="product-details">
          <div class="title">
            <h2>{{ product.title }}</h2>
          </div>
          <div class="price">
            <div class="price">
  {% if product.compare_at_price > product.price %}
    <h4 id="price">{{ cart.currency.symbol }}{{ product.price | money_without_currency }}</h4>
    <span class="compare-price" style="text-decoration: line-through;">
      {{ cart.currency.symbol }}{{ product.compare_at_price | money_without_currency }}
    </span>
  {% else %}
    <h4 id="price">{{ cart.currency.symbol }}{{ product.price | money_without_currency }}</h4>
  {% endif %}
  <span>TAX INCLUDED</span>
</div>

            <span>TAX INCLUDED</span>
          </div>


          {% unless product.has_only_default_variant %}
            <div class="tag-wrap">
              <span>{{ product.options[0] }}</span>
              <ul>
                {% for variant in product.variants %}
                  <li>
                    <input
                      id="size-list-{{ forloop.index }}"
                      type="radio"
                      name="size-list-1"
                      data-variant-id="{{ variant.id }}"
                      {% if forloop.first %}
                      checked{% endif %}>
                    <label for="size-list-{{ forloop.index }}">
                      <img
                        src="{{ variant.image |  image_url: width:300 }}"
                        alt="{{ variant.title }}"
                        width=""
                        height="">
                    </label>
                  </li>
                {% endfor %}
              </ul>
            </div>
          {% endunless %}

          {% if product.metafields.custom.related_products.value != blank %}
            {% assign related_products = product.metafields.custom.related_products.value %}
            <div class="tag-wrap">
              <span>Models</span>
              <ul>
                {% for related_product in related_products %}
                  <a href="{{ related_product.url }}">
                    <li>
                      <input
                        id=""
                        type="radio"
                        name="size-list-1"
                        data-variant-id="{{ related_product.id }}"
                        {% if forloop.first %}
                        checked{% endif %}>
                      <label for="size-list-{{ forloop.index }}">
                        <img
                          src="{{ related_product.featured_image |  image_url: width:300 }}"
                          alt="{{ related_product.title }}"
                          width=""
                          height="">
                      </label>
                    </li>
                  </a>
                {% endfor %}
              </ul>
            </div>
          {% endif %}

          <div class="qty-btn-wrap">
            <span>Quantity</span>
            <div class="quantity cart-plus-minus">
              <input type="text" value="1">
              <div class="dec qtybutton"></div>
              <div class="inc qtybutton"></div>
            </div>
          </div>
          <input
            type="hidden"
            name="id"
            id="variantId"
            value="{{ product.variants.first.id }}">
          <input
            type="hidden"
            name="quantity"
            id="quantity"
            value="1"
            min="1">
          <input
            type="hidden"
            name="handle"
            id="handle"
            value="{{ product.handle }}">

          <input
            type="hidden"
            name="currency"
            id="currency"
            value="{{cart.currency.symbol}}">
          <div class="buy-btn">
            <a href="#" class="theme-btn addToCart">ADD TO CART</a>
            <a
              href="#"
              class="theme-btn loadingBtn"
              style="display: none;">Loading..</a>
            <a href="#" class="theme-btn buyCheckout">Buy Now</a>
          </div>
          <div class="buy-btn mobail">
            <a href="#" class="theme-btn addToCart">add to bag</a>
          </div>

          <p>{{ product.description }}</p>

          <div class="accordion-section">
            <div class="accordion" id="accordionExample">
              {% for block in section.blocks %}
                <div class="accordion-item">
                  <h3 class="accordion-header" id="heading{{forloop.index}}">
                    <button
                      class="accordion-button collapsed"
                      type="button"
                      data-bs-toggle="collapse"
                      data-bs-target="#collapse{{forloop.index}}"
                      aria-expanded="false"
                      aria-controls="collapse{{forloop.index}}">
                      {{ block.settings.title }}
                    </button>
                  </h3>
                  <div
                    id="collapse{{forloop.index}}"
                    class="accordion-collapse collapse"
                    aria-labelledby="heading{{forloop.index}}"
                    data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                      {{ block.settings.description }}
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    <!-- end col -->
    </div>
  <!-- end row -->
  </div>
<!-- end of container -->
</section>

<script>
  console.log({{ cart.currency.symbol | json }})
   document.addEventListener('DOMContentLoaded', function() {
  var variantInputs = document.querySelectorAll('input[name="size-list-1"]');
  var productHandle = $('#handle').val()
  var currency = $('#currency').val()

  // Fetch product details
  function fetchProductDetails(handle) {
    fetch(`/products/${handle}.js`)
      .then(response => {
        if (!response.ok) {
          throw new Error('Network response was not ok');
        }
        return response.json();
      })
      .then(data => {
        console.log('Product Data:', data);
        updateVariantPrices(data);
      })
      .catch(error => {
        console.error('There was a problem with the fetch operation:', error);
      });
  }

  // Update variant prices based on the selected variant
 // Update variant prices based on the selected variant
function updateVariantPrices(product) {
  variantInputs.forEach(function(input) {
    input.addEventListener('change', function() {
      var variantId = this.getAttribute('data-variant-id');
      $('#variantId').val(variantId);

      // Find the selected variant
      var selectedVariant = product.variants.find(variant => variant.id === parseInt(variantId));
      
      if (selectedVariant) {
        // Update the current price
        let price = (selectedVariant.price / 100).toFixed(2);
        $("h4#price").text(currency + price);

        // Check and update the compare_at_price
        if (selectedVariant.compare_at_price && selectedVariant.compare_at_price > selectedVariant.price) {
          let comparePrice = (selectedVariant.compare_at_price / 100).toFixed(2);

          // Add or update the compare price element
          if ($(".compare-price").length) {
            $(".compare-price").text(currency + comparePrice);
          } else {
            $("h4#price").after(
              `<span class="compare-price" style="text-decoration: line-through; margin-left: 10px;">${currency + comparePrice}</span>`
            );
          }
        } else {
          // Remove the compare price if no discount
          $(".compare-price").remove();
        }
      }
    });
  });
}


  // Initialize product details fetch
  fetchProductDetails(productHandle);
  });


</script>


