<section class="about-section section-padding pb-0">
  <div class="container">
    <div class="image-sequence-container">
      <div class="image-sequence">
        <div class="about-top">
          <div class="logo wow fadeInUp" data-wow-duration="1000ms">
            <img
              src="{{ section.settings.about_image | image_url: width: 700  }}"
              alt=""
              width=""
              height="">
          </div>
          <h2 class="wow fadeInUp" data-wow-duration="1200ms">{{ section.settings.title }}</h2>
        </div>

        <div class="row">
          <div class="col-lg-12 col-12">
            <div class="video-item">
              <video
                class="no-controls video-div"
                src="{{ section.settings.video_link.sources[1].url }}"
                playsinline
                autoplay
                loop
                muted></video>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "About Section",
    "settings": [
      {
        "type": "image_picker",
        "id": "about_image",
        "label": "About Image"
      }, {
        "type": "text",
        "id": "title",
        "label": "About Title",
        "default": "AS BAMBOO."
      }, {
        "type": "video",
        "id": "video_link",
        "label": "Video Link"
      }
    ],
    "presets": [
      {
        "name": "About Section"
      }
    ]
  }
{% endschema %}