<section class="collection-section class-remove section-padding pt-0 pb-0 px-60">
  <div class="container-fluid">
    <div class="row">
      {% for block in section.blocks %}
        <div class="{% if forloop.index == 3 %} col-lg-12 {% else %} col-lg-6 {% endif %} col-12">
          <div class="collection-item {% if forloop.index == 3 %} last-item {% endif %} wow fadeInUp" data-wow-duration="1000ms">
            <a href="{{ block.settings.button_Link }}" class="category-image">
              <img
                src="{{ block.settings.collection_image | image_url: width: 1920 }}"
                alt="{{ block.settings.title }}"
                width=""
                height="">
            </a>
            <div class="collection-info">
              <h2>{{ block.settings.title }}</h2>
              <a href="{{ block.settings.button_Link }}" class="theme-btn">{{ block.settings.button_text }}</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Collection Banner Section",
    "settings": [],
    "blocks": [
      {
        "name": "Slider",
        "type": "block",
        "settings": [
          {
            "type": "image_picker",
            "id": "collection_image",
            "label": "Image"
          }, {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "PERFECT VISION, PERFECT DRIFT."
          }, {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Shop FF Ski Collection"
          }, {
            "type": "url",
            "id": "button_Link",
            "label": "Button Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Collection Banner Section",
        "blocks": [
          {
            "type": "block"
          }
        ]
      }
    ]
  }
{% endschema %}