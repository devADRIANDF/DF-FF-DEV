<section class="product-selling-section section-padding pl-60 pt-0">
  <div class="section-title">
    <h2>{{ section.settings.category_title }}</h2>
  </div>

  <div class="product-wrap">
    <div class="container-fluid">
      <div class="row product-active owl-carousel">
        {% assign collections = collections[section.settings.collection].products %}
        {% for product in collections %}
          <div class="product-item wow fadeInUp" data-wow-duration="1000ms">
           <div class="product-img">
  <a href="{{ product.url }}" class="product-image">
    <div class="image-wrap">
      <img
        class="image1 hover-image"
        src="{{ product.featured_image | image_url: width: 800 }}"
        alt="{{ product.title }}">
      <img
        class="image2 hidden-image"
        src="{{ product.images[1] | image_url: width: 900 }}"
        alt="{{ product.title }}">
    </div>

    {% if product.metafields.custom.text_highlight and product.metafields.custom.text_highlight.value != blank %}
      <div class="custom-text-badge">
        {{ product.metafields.custom.text_highlight.value }}
      </div>
    {% endif %}
  </a>

  <div class="cart-btn sliderAddToCart" data-itemid="{{ product.variants.first.id }}">
    <a href="#" class="theme-btn cartBtn">Add to Cart</a>
    <a
      href="#"
      class="theme-btn loadingBtn"
      style="display: none;">Loading..</a>
  </div>
</div>
            <div class="product-info">
              <h2>
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h2>

              {% if product.tags contains '1 Colors' %}
                <p>3 Colors</p>
              {% endif %}
              {% if product.tags contains '2 Colors' %}
                <p>2 Colors</p>
              {% endif %}
              {% if product.tags contains '3 Colors' %}
                <p>3 Colors</p>
              {% endif %}
              {% if product.tags contains '4 Colors' %}
                <p>4 Colors</p>
              {% endif %}
              {% if product.tags contains '5 Colors' %}
                <p>5 Colors</p>
              {% endif %}
 <div class="price">
  {% assign discount_percentage = 0 %} <!-- Ajusta este porcentaje según el descuento automático -->

  <!-- Calcular el valor del descuento -->
  {% assign discount_value = product.price | times: discount_percentage | divided_by: 100 %}

  <!-- Calcular el precio con descuento -->
  {% assign discounted_price = product.price | minus: discount_value %}

  <!-- Mostrar solo el precio final si no hay descuento -->
  <span class="final-price">{{ cart.currency.symbol }}{{ discounted_price | money_without_currency }}</span>

  <!-- Mostrar el precio tachado solo si hay un descuento -->
  {% if discount_percentage > 0 %}
    <span class="original-price" style="text-decoration: line-through; color: gray;">
      {{ cart.currency.symbol }}{{ product.price | money_without_currency }}
    </span>
  {% endif %}
</div>


            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Product Slider",
    "settings": [
      {
        "type": "text",
        "id": "category_title",
        "label": "Categories Title",
        "default": "Best SELLERs"
      }, {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      }
    ],

    "presets": [
      {
        "name": "Product Slider"
      }
    ]
  }
{% endschema %}