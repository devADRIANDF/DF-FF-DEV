<section class="hero-slider">
  <div class="hero-slide-wrap">
    {% for block in section.blocks %}
      <div class="slider-item">
        <div class="video-bg">
          <video
            class="no-controls"
            src="{{ block.settings.hero_background_image }}"
            loop="true"
            playsinline
            autoplay
            muted></video>
        </div>
        <div class="slide-inner slide-bg-image">
          <div class="container-fluid">
            <div class="slide-content">
              <div data-swiper-parallax="300" class="slide-title">
                <h2>{{ block.settings.hero_title }}
                  <span>{{ block.settings.hero_subtitle }}</span>
                </h2>
              </div>
              <div data-swiper-parallax="200" class="slide-title-top">
                <p>{{ block.settings.hero_description }}</p>
              </div>
              <div class="clearfix"></div>
              {% if block.settings.hero_button_text != blank %}
                <div data-swiper-parallax="500" class="slide-btns">
                  <a href="{{ block.settings.hero_button_Link }}" class="theme-btn">{{ block.settings.hero_button_text }}</a>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    {% endfor %}

  </div>
</section>
{% schema %}
  {
    "name": "Hero Section",
    "settings": [],
    "blocks": [
      {
        "name": "Slider",
        "type": "block",
        "settings": [
          {
            "type": "url",
            "id": "hero_background_image",
            "label": "Background Video",
            "info": "https://framerusercontent.com/assets/nslEIjzOMqr3Ubfl0w3TwZTlRE8.mp4"
          },
          {
            "type": "text",
            "id": "hero_title",
            "label": "Hero Title",
            "default": "STYLE, COMFORT & PERFORMANCE,"
          },
          {
            "type": "text",
            "id": "hero_subtitle",
            "label": "Hero Subtitle",
            "default": "AT IT'S PEAK."
          },
          {
            "type": "text",
            "id": "hero_description",
            "label": "Hero Description",
            "default": "Flexible sunglasses that self-adjust. Style and comfort at it's peak."
          }, {
            "type": "text",
            "id": "hero_button_text",
            "label": "Hero Button Text",
            "default": "Shop by Lifestyle"
          }, {
            "type": "url",
            "id": "hero_button_Link",
            "label": "Hero Button Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hero Section",
        "blocks": [
          {
            "type": "block"
          }
        ]
      }
    ]
  }
{% endschema %}