<!-- start of gcollection-section -->
<section class="gcollection-section section-padding px-60">
  <div class="container">
    <div class="row">
      {% for block in section.blocks %}
        {% if forloop.index0 == 0 or forloop.index0 == 3 or forloop.index0 == 5 %}
          <div class="col-lg-7 col-12">
            <div class="gcollection-item wow fadeInUp" data-wow-duration="1000ms">
              <div class="gcollection-image">
                <img
                  src="{{ block.settings.collection_image | image_url: width: 1920 }}"
                  width=""
                  height=""
                  alt="{{ block.settings.title }}">
              </div>
              <div class="gcollection-info">
                <h2>{{ block.settings.title }} {{ forloop.index0 }} {{ forloop.index0 }}</h2>
                <p>{{ block.settings.description }}</p>
              </div>
            </div>
          </div>
        {% endif %}
        {% if forloop.index0 == 1 or forloop.index0 == 2 or forloop.index0 == 6 %}
          <div class="col-lg-5 col-12">
            <div class="gcollection-item wow fadeInUp" data-wow-duration="1200ms">
              <div class="gcollection-image">
                <img
                  src="{{ block.settings.collection_image | image_url: width: 1920 }}"
                  width=""
                  height=""
                  alt="{{ block.settings.title }}">
              </div>
              <div class="gcollection-info">
                <h2>{{ block.settings.title }} {{ forloop.index0 }} {{ forloop.index0 }}</h2>
                <p>{{ block.settings.description }}</p>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Grid Collection Section",
    "settings": [],
    "blocks": [
      {
        "name": "Item",
        "type": "block",
        "settings": [
          {
            "type": "image_picker",
            "id": "collection_image",
            "label": "Image"
          }, {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "PERFECT VISION, PERFECT DRIFT."
          }, {
            "type": "text",
            "id": "description",
            "label": "Description",
            "default": "Created by the worldâ€™s top tactical eyewear designer."
          }, {
            "type": "url",
            "id": "button_Link",
            "label": "Button Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Grid Collection Section",
        "blocks": [
          {
            "type": "block"
          }
        ]
      }
    ]
  }
{% endschema %}