<section class="product-category-section section-padding pl-60">
  <div class="section-title">
    <h2>
      <span>{{ section.settings.category_title }}</span>
      <a href="{{ section.settings.view_all_url }}">{{ section.settings.view_all_text }}</a>
    </h2>
  </div>
  <div class="product-category">
    <div class="container-fluid">
      <div class="row category-active owl-carousel">
        {% for product in collections %}
          {% if product.metafields.custom.show_collection.value == true %}
            <div class="category-item wow fadeInUp" data-wow-duration="1000ms">
              <a href="{{ product.url }}" class="category-image">
                <img
                  src="{{ product.image.src | image_url: width: 600  }}"
                  alt="{{ product.title }}"
                  width=""
                  height="">
              </a>
              <div class="category-info">
                <h2>
                  <a href="{{ product.url }}">{{ product.title }}</a>
                </h2>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Category Slider",
    "settings": [
      {
        "type": "text",
        "id": "category_title",
        "label": "Categories Title",
        "default": "Shop by Lifestlye"
      }, {
        "type": "text",
        "id": "view_all_text",
        "label": "View All Text",
        "default": "View All"
      }, {
        "type": "url",
        "id": "view_all_url",
        "label": "View All URL"
      }
    ],

    "presets": [
      {
        "name": "Category Slider"
      }
    ]
  }
{% endschema %}